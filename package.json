{
  "name": "service-booking-platform",
  "packageManager": "pnpm@8.0.0",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "build": "turbo run build",
    "build:types": "pnpm --filter @sbp/types build",
    "env:dev": "cross-env NODE_ENV=development pnpm --filter @sbp/env dev:spread",
    "env:tst": "cross-env NODE_ENV=test pnpm --filter @sbp/env dev:spread",
    "dev": "turbo run dev",
    "dev:api": "cross-env NODE_ENV=development pnpm --filter api dev",
    "dev:admin": "cross-env NODE_ENV=development pnpm --filter admin-panel dev",
    "dev:org": "cross-env NODE_ENV=development pnpm --filter org-dashboard dev",
    "dev:landing": "cross-env NODE_ENV=development pnpm --filter landing dev",
    "dev:widget": "cross-env NODE_ENV=development pnpm --filter widget dev",
    "dev:ui": "concurrently \"pnpm dev:admin\" \"pnpm dev:org\" \"pnpm dev:landing\" \"pnpm dev:widget\"",
    "dev:all": "concurrently \"pnpm dev:api\" \"pnpm dev:ui\"",
    "dev:merge-env": "dotenv -e .env -e .env.local",
    "dev:infra:watch": "pnpm dev:merge-env -- docker compose -f infra/docker-compose.yml --env-file .env up",
    "dev:infra:up": "pnpm dev:merge-env -- docker compose -f infra/docker-compose.yml up -d",
    "dev:infra:down": "pnpm dev:merge-env -- docker compose -f infra/docker-compose.yml --env-file .env down",
    "prisma:generate": "pnpm dev:merge-env -- pnpm --filter prisma generate",
    "e2e:api": "cross-env dotenv -e .env.test -e .env.test.local -- jest --config=jest.config.ts --runInBand"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.30.1",
    "concurrently": "9.1.2",
    "cross-env": "7.0.3",
    "dotenv": "16.5.0",
    "eslint": "9.24.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "5.2.6",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "turbo": "2.5.0"
  },
  "dependencies": {
    "@sbp/types": "workspace:*",
    "@sbp/ui": "workspace:*",
    "@sbp/prisma": "workspace:*"
  }
}
