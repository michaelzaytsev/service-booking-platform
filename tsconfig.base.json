{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@sbp/types": ["packages/types/src"],
      "@sbp/run": ["packages/run/src"]
    },
  },
  "exclude": ["node_modules"],
  "include": ["apps", "packages"]
}
